<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Rammel_Score" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Dynamic values for light and dark mode -->
        <!-- Text color for Text Views-->
        <item name="myTextViewColor">#615B5B</item>
        <!-- Button text color -->
        <item name="myButtonTextColor">@color/white</item>
        <!-- Button background color -->
        <item name="myButtonBackgroundColor">#1E88E5</item>
    </style>

    <!-- Generic style for Text Views -->
    <style name="myTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">?attr/myTextViewColor</item>
    </style>
    <!-- Specific style for scores -->
    <style name="myTextViewStyle.ScoreText">
        <item name="android:textSize">60sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>
    <!-- Specific style for header country texts -->
    <style name="myTextViewStyle.CountryText">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!-- style for buttons -->
    <style name="myButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">?attr/myButtonTextColor</item>
        <item name="backgroundTint">?attr/myButtonBackgroundColor</item>
    </style>
    <!-- specific style for Add/Minus button -->
    <style name="myButtonStyle.AddMinus">
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!-- specific style for Reset button -->
    <style name="myButtonStyle.Reset">
        <item name="android:textStyle">bold</item>
    </style>
    <!-- style for toggle button -->
    <style name="myButtonStyle.toggleTeamButton">
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="background">?attr/myButtonBackgroundColor</item>
    </style>

    <!-- style for radio button scoring options -->
    <style name="ScoreRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:drawableTop">@drawable/radio_button_team</item>
        <item name="android:button">@null</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textColor">?attr/myTextViewColor</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textAlignment">center</item>
    </style>

</resources>